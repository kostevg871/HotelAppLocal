<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelAppLocal.Views.MyBookingsPage"
             Title="Мои бронирования">

    <ContentPage.BackgroundColor>#EFF6FF</ContentPage.BackgroundColor>

    <ScrollView>
        <VerticalStackLayout Padding="24" Spacing="16">

            <Label Text="Мои бронирования"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="#1D4ED8" />

            <Label x:Name="EmptyLabel"
                   Text="У вас пока нет бронирований."
                   FontSize="14"
                   TextColor="#6B7280"
                   IsVisible="False" />

            <CollectionView x:Name="BookingsView"
                            ItemsSource="{Binding Bookings}"
                            Margin="0,8,0,0"
                            IsVisible="False">

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame HasShadow="True"
                               CornerRadius="12"
                               Padding="14"
                               Margin="0,0,0,10"
                               BackgroundColor="White"
                               BorderColor="#E5E7EB">

                            <VerticalStackLayout Spacing="6">

                                <Label Text="{Binding RoomNumber}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#111827" />

                                <Label Text="{Binding DatesText}"
                                       FontSize="13"
                                       TextColor="#4B5563" />

                                <Label Text="{Binding StatusText}"
                                       FontSize="13"
                                       FontAttributes="Bold"
                                       TextColor="{Binding StatusColor}" />

                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
