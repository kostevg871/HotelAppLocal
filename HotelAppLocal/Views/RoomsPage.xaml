<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HotelAppLocal.Views.RoomsPage"
             Title="Номера">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Брони" Clicked="OnBookingsClicked" />
        <ToolbarItem Text="Добавить" Clicked="OnAddRoomClicked" />
        <ToolbarItem Text="Выход" Clicked="OnLogoutClicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.BackgroundColor>#EFF6FF</ContentPage.BackgroundColor>

    <Grid RowDefinitions="Auto,*">

        <!-- Верхняя панель -->
        <Grid Grid.Row="0"
              Padding="16,20"
              BackgroundColor="#1D4ED8">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <VerticalStackLayout Grid.Column="0" Spacing="4">
                <Label Text="HotelApp"
                       FontSize="24"
                       FontAttributes="Bold"
                       TextColor="White" />

                <Label Text="Выберите доступный номер и забронируйте его"
                       FontSize="13"
                       TextColor="#DBEAFE" />
            </VerticalStackLayout>

            <Button Grid.Column="1"
                    Text="Обновить"
                    Padding="14,6"
                    Margin="10,0,0,0"
                    BackgroundColor="White"
                    TextColor="#1D4ED8"
                    CornerRadius="8"
                    FontAttributes="Bold"
                    Command="{Binding LoadCommand}" />
        </Grid>

        <!-- Список номеров -->
        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding Rooms}"
                        ItemsLayout="VerticalList"
                        Margin="16,12,16,16">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HasShadow="True"
                           CornerRadius="12"
                           Padding="14"
                           Margin="0,0,0,10"
                           BackgroundColor="White"
                           BorderColor="#E5E7EB">

                        <VerticalStackLayout Spacing="8">

                            <VerticalStackLayout Spacing="2">
                                <Label Text="{Binding Number, StringFormat='Номер {0}'}"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="#111827" />
                                <Label Text="{Binding PricePerNight, StringFormat='{}{0:N0} ₽ / ночь'}"
                                       FontSize="14"
                                       TextColor="#2563EB" />
                            </VerticalStackLayout>

                            <HorizontalStackLayout Spacing="6"
                                                   VerticalOptions="Center">
                                <BoxView WidthRequest="8"
                                         HeightRequest="8"
                                         CornerRadius="4"
                                         Color="#22C55E" />
                                <Label Text="Доступен"
                                       FontSize="12"
                                       TextColor="#6B7280" />
                            </HorizontalStackLayout>

                            <Button Text="Забронировать"
                                    BackgroundColor="#2563EB"
                                    TextColor="White"
                                    CornerRadius="8"
                                    Padding="10,6"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnBookClicked" />
                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

    </Grid>
</ContentPage>
